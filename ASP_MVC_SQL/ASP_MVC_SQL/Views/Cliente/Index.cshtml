@model List<ASP_MVC_SQL.Models.ClienteModel>
@{
    ViewBag.Title = "Index";
}

<div class="text text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">

    </div>

    <h1 class="display-4">Listagem de Cliente</h1>


</div>

<p></p>
<p></p>



<div class="text-center">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>
                        <button type="button" class="btn btn-warning">Detalhe</button>

                    </td>

                </tr>
            }


        </tbody>
    </table>

</div>


@section scripts{
    <script src="~/Scripts/cliente/Index.js"></script>
}

